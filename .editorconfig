root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.txt]
insert_final_newline = false

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{js,json,yml}]
indent_style = space
indent_size = 2

[*.java]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[Jenkinsfile*]
indent_style = space
indent_size = 4
