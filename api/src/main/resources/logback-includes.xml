<included>
    <appender name="PAYMENT_AUDIT_FILE" class="ch.qos.logback.core.FileAppender">
        <file>${PAYMENT_AUDIT_FILE:-payment-audit.log}</file>
        <append>true</append>
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{10}:%line: %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="uk.gov.hmcts.payment.api.model.LoggingPaymentService">
        <appender-ref ref="PAYMENT_AUDIT_FILE" />
    </logger>
</included>
